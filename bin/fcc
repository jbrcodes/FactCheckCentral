#!/bin/sh


if [ ! "$1" ]
then
    echo "Usage: fcc <subcmd>"
    exit 1
fi

# Go to proj dir
SCRIPT=$(readlink -f "$0")
SCRIPTDIR=$(dirname "$SCRIPT")
cd $SCRIPTDIR/..

# Activate venv (fragile!)
if [ `hostname` = "pizarra-1.home" ]
then
    . venv-flask/bin/activate
else
    . env/bin/activate
fi

# Let's go!
flask --app fcc $@
